{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ssmt4",
  "version": "0.0.1",
  "identifier": "ssmt4",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "center": true, 
        "title": "SSMT4 V0.0.1",
        "width": 1000,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    } 
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
