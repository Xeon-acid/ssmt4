{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ssmt4",
  "version": "0.0.2",
  "identifier": "ssmt4",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "center": true,
        "title": "SSMT4",
        "width": 1280,
        "height": 720,
        "minWidth": 1056,
        "minHeight": 594,
        "decorations": false,
        "backgroundColor": "#000000"
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' asset: http: https: file: data:; frame-src *;",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APP/**",
          "$RESOURCE/**",
          "src-tauri/resources/**",
          "target/**",
          "$LOCALDATA/**",
          "$APPDATA/**"
        ]
      }
    } 
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
      "resources": [
        "resources/**/*"
      ]
  }
}
